    <section class="blog-posts grid-system">
      <div class="container">
        <div class="row">
          <div class="col-lg-8">
            <div class="all-blog-posts">
              <div class="row">
                <div class="col-lg-12">
                    <div class="sidebar-item comments">
                      <div class="sidebar-heading">
                        <h2>Chats</h2>
                      </div>
                      <div class="content">
                        <ul>
                            <%for(i of chat){%>
                          <li class="<%=i.class%>">
                            <div class="right-content">
                              <h4><%=i.sender%><span>May 16, 2020</span></h4>
                              <p><%=i.message%></p>
                            </div>
                          </li>
                          <%}%>
                          
                        </ul>
                      </div>
                    </div>
                  </div>
                <div class="col-lg-12">
                  <div class="sidebar-item submit-comment">
                    <div class="sidebar-heading">
                      <h2>Enter Your Message</h2>
                    </div>
                    <div class="content">
                      <form id="comment" action="/user/chat/<%=id%>/<%=postId%>" method="POST">
                        <div class="row">
                          
                          <div class="col-lg-12">
                            <fieldset>
                              <textarea  name="message" rows="6" id="message" placeholder="Type your message" required=""></textarea>
                            </fieldset>
                          </div>
                          <div class="col-lg-12">
                            <fieldset>
                              <button type="submit" id="form-submit" class="main-button">Submit</button>
                            </fieldset>
                          </div>
                        </div>
                      </form>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    
